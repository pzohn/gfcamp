/*推荐 begin */
.re_tit{
    padding: 30rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    position: relative;
}
.re_tit::after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}
.re_l{
    font-size: 32rpx;
}
.re_l view{
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    background: url(https://www.hattonstar.com/gfcamp/all.png) no-repeat;
    background-size: 175rpx 249rpx;
    background-position: -2rpx -160rpx;
    margin-right: 14rpx;
}
.re_r{
    position: relative;
    font-size: 24rpx;
    color: #999;
}
.re_r:after{
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border-right: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    font-size: 0;
    margin-left: 20rpx;
}

/*推荐 end */
