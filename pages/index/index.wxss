.navbar{
 position:fixed;
 flex: none;
 /* display: flex; */
 width: 100%;
 background: #fff;
 z-index: 999;
}
.navbar .item{
 position: relative;
 flex: auto;
 text-align: center;
 line-height: 70rpx;
 color: grey;
 font-size: 15px;
}
.navbar .item.active{
 color: rgb(221, 56, 65);
 font-size: 17px;
 font-weight: 700;
}
.navbar .item.active:after{
 content: "";
 display: block;
 position: absolute;
 bottom: 0;
 left: 0;
 right: 0;
 height: 4rpx;
 background: rgb(221, 56, 65);
}

.video_container{
  padding: 180rpx 25rpx;
}
.type-item{
  border-radius: 10rpx;
  position: relative;
}

.type-item + .type-item{
  margin-top: 20rpx;
}

.type-img{
  width: 100%;
  height: 290rpx;
  border-radius: 10rpx;
  display: block;
}

.title{
  display: flex;
  flex-direction: row;
  padding-top: 10px;
}

.title text{
  left: 10rpx;
  bottom: 20rpx;
  color: black;
  font-size: 28rpx;
  font-weight: 500;
  width: 74%;
  padding-top: 5px;
}

.btn{
  right: 10rpx;
  width: 24%;
  background-color:#FF5722;
  height: 28px;
  border-radius: 25rpx;
  font-size: 14px;
  text-align: center;
  color: white;
}


.search{
  display: flex;
  flex-direction: row;
  padding: 10px;
  width: 95%;
  padding-bottom: 1px;
}
.searchBg{
  background-color:#f2f2f2;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 40px;
  line-height: 40px;
  border-radius: 5px;
  color: #999999;
}
.searchBg image{
  margin-left: 5px;
